{
  "name": "custom-ui-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for custom-ui component library and example app",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=packages/custom-ui",
    "dev": "npm start --workspace=apps/example-app",
    "publish:lib": "npm publish --workspace=packages/custom-ui --access public"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
